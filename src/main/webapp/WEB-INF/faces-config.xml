<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
	version="2.3">

	<application>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>pt_BR</supported-locale>
		</locale-config>

		<resource-bundle>
			<base-name>br.com.roleplay.messages.messages</base-name>
			<var>messages</var>
		</resource-bundle>
	</application>

	<converter>
		<description>Race converter</description>
		<converter-id>raceConverter</converter-id>
		<converter-class>br.com.roleplay.converter.RaceConverter</converter-class>
	</converter>
	<converter>
		<description>Language converter</description>
		<converter-id>languageConverter</converter-id>
		<converter-class>br.com.roleplay.converter.LanguageConverter</converter-class>
	</converter>
	<converter>
		<description>Ability bonus converter</description>
		<converter-id>abilityBonusConverter</converter-id>
		<converter-class>br.com.roleplay.converter.AbilityBonusConverter</converter-class>
	</converter>
	<converter>
		<description>Weapon property converter</description>
		<converter-id>weaponPropertyConverter</converter-id>
		<converter-class>br.com.roleplay.converter.WeaponPropertyConverter</converter-class>
	</converter>
	<converter>
		<description>Damage type converter</description>
		<converter-id>damagetypeConverter</converter-id>
		<converter-class>br.com.roleplay.converter.DamageTypeConverter</converter-class>
	</converter>
	<converter>
		<description>Dice converter</description>
		<converter-id>diceConverter</converter-id>
		<converter-class>br.com.roleplay.converter.DiceConverter</converter-class>
	</converter>
	<converter>
		<description>Background converter</description>
		<converter-id>backgroundConverter</converter-id>
		<converter-class>br.com.roleplay.converter.BackgroundConverter</converter-class>
	</converter>
	<converter>
		<description>Item converter</description>
		<converter-id>itemConverter</converter-id>
		<converter-class>br.com.roleplay.converter.ItemConverter</converter-class>
	</converter>
</faces-config>